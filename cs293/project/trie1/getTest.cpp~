// getline with strings
#include <iostream>
#include <string>
using namespace std;

int main () {
  string str;
  cout << "Please enter full name: ";
  getline (cin,str);
  cout << "Thank you, " << str << ".\n";
  str.erase(str.size()-1,1);
cout << "Thank you, " << str <<"\b"<< ".\n";
return 0;
